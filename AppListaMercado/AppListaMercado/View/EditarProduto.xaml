<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppListaMercado.View.EditarProduto"
             Title="Cadastro dos itens"
             BackgroundImage="cadastro.png">
    
    
    
    <ContentPage.Content>
        <StackLayout Margin="20">
            <Label Text="Nome: "
                    FontSize="Large"
                   TextColor="Black"
                   BackgroundColor="White"
                    HorizontalOptions="CenterAndExpand" />

            <Entry x:Name="txt_descricao"  />

            <Label Text="Quantidade: "
                    FontSize="Large"
                   TextColor="Black"
                   BackgroundColor="White"
                    HorizontalOptions="CenterAndExpand" />

            <Entry x:Name="txt_qtd" Keyboard="Numeric"  />



            <Label Text="Preço: "
                    FontSize="Large"
                   TextColor="Black"
                   BackgroundColor="White"
                    HorizontalOptions="CenterAndExpand" />

            <Entry x:Name="txt_preco"  />


            <Button Text="Salvar alterações" FontSize="Large"
                   TextColor="Black" Clicked="Button_Clicked"/>



        </StackLayout>
    </ContentPage.Content>
</ContentPage>